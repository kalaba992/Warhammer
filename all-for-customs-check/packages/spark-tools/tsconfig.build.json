{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",

    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"]
}
